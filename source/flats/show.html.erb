<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>
<div class="banner banner-show" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>

</div>
<!-- Inject flat data in template -->
<div class="container">
  <div class="row">
    <div class="city-flats">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle profile" %>
      <p><%= flat.name %></p>
    </div>
    <div class="city-description">
      <h1><%= flat.description %></h1>
      <p><%= flat.city_name %></p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <form action="#">
      <h4>Book this flat</h4>
      <div class="form">
        <div class="form-group">
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkin" id="checkin">
          </div>
          <div class="col-xs-6">
            <input type="text" class="form-control" placeholder="checkout">
          </div>
        </div>
        <div class="form-group">
          <select name="" id="guests" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
      </form>
    </div>
  </div>
  </div>
</div>
